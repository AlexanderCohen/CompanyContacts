<p id="notice"><%= notice %></p>
<div class="flex mb-4 h-full">
  <div class="w-1/5 h-full">
    <div class="text-center text-xl font-bold pt-4">All Companies</div>
    <p class="mt-4 text-center">
      View your companies <br>or<br> create a new company
    </p>
    <div class="flex h-full mt-4 items-center ">
      <%= link_to 'Back', companies_path, class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-8 mr-4"  %>
    </div>

</div>
 <div class="w-3/5 h-full">


<table class="table-fixed w-full">
  <thead>
    <tr>
      <th>Company</th>
      <th>Abn</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% if @companies.empty? %>
      <tr>
        <td colspan="3" class="font-bold text-m">No Companies exsist. Create a new company - <%= link_to 'Create first company', new_company_path, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %></td>
      </tr>

    <% end %>

    <% @companies.each do |company| %>
      <tr class="h-full mt-6">
        <td class="ml-6 font-bold text-xl"><%= company.name %></td>
        <td class="text-center h-full mt-6"><%= company.abn %></td>
        <td class="h-12 mt-6">
        <%= link_to 'Show', company, class:"bg-blue-500 hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
        <%= link_to 'Edit', edit_company_path(company), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 border border-blue-700 rounded" %>
        <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-transparent hover:bg-red-700 text-white font-bold py-2 px-4 border border-red-700 rounded"  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 </div>
<br>

 <div class="w-1/5 h-full">
   <div class="m-8">

     <%= link_to 'New Company', new_company_path, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
   </div>
</div>

</div>
